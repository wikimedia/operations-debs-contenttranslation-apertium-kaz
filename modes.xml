<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="kaz-twol">
    <pipeline>
      <program name="hfst-strings2fst -S"/>
      <program name="hfst-compose-intersect">
        <file name=".deps/kaz.twol.hfst"/>
      </program>
      <program name="hfst-fst2strings"/>
    </pipeline>
  </mode>

  <mode name="kaz-morph">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kaz.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="kaz-lexc">
    <pipeline>
      <program name="hfst-proc -g">
        <file name=".deps/kaz.lexc.hfst"/>
      </program>
    </pipeline>
  </mode>


  <mode name="kaz-gener">
    <pipeline>
      <program name="lt-proc -g">
        <file name="kaz.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="kaz-tagger">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kaz.automorf.bin"/>
      </program>
      <program name="cg-proc -w -n -1">
        <file name="kaz.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="kaz-disam">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kaz.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-kaz.kaz.rlx"/>
      </program>
    </pipeline>
  </mode>


</modes>
